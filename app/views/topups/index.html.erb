
<div class="container">
  <h1>Top-ups</h1>
  <div class="row">
    <% @topups.each do |topup| %>
      <div class="col-6 col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= topup.name %></h5>
            <p>Amount: <%= humanized_money_with_symbol(topup.price) %></p>
            <%= link_to "More details", topup_path(topup), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
